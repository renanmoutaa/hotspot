# Hotspot stack environment variables (Portainer)
# Preencha via Portainer ao criar o stack (ou use defaults do compose)

# Banco de Dados
DB_PASSWORD=hotspotpass

# Nest API
API_PORT=3000
NODE_ENV=production
RADIUS_SECRET=radiussecret
DATABASE_URL=postgresql://hotspot:${DB_PASSWORD}@db:5432/hotspot

# FastAPI
SECRET_KEY=changeme
JWT_SECRET=changeme
UNIFI_CONTROLLER_URL=https://unifi.example.com:8443
UNIFI_USER=admin
UNIFI_PASSWORD=password

# Frontend
VITE_API_PROXY=/api
VITE_PYAPI_PROXY=/pyapi

# Dom√≠nio (opcional)
DOMAIN=example.com
HTTPS_ENABLED=false